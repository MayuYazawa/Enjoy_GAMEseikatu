<div class="container" style="margin-top:25px;">
  <div class="public-registrations">
    <div class="public-registrations-title">
      <h4><b>新規会員登録</b></h4>
    </div>

    <div class="public-registrations-table">
      <%= form_with model: @user, url: user_registration_path do |f| %>

        <table>
          <tr class="public-registrations-field">

            <th><%= f.label :username, "ユーザーネーム" %></th>
            <td><%= f.text_field :username, size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="public-registrations-field">
            <th><%= f.label :"メールアドレス" %></th>

            <td><%= f.email_field :email, autofocus: true, size: 25, autocomplete: "email", class: "textlines-radius" %></td>
          </tr>

          <tr>
            <th><%= f.label :"性別" %></th>

            <td><%= f.radio_button :gender, false, checked: true %><%= f.label :gender, "男性" %>
                <%= f.radio_button :gender, true %><%= f.label :gender, "女性" %></td>
          </tr>

          <tr class="public-registrations-field">
            <th>
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
              <% end %>
            </th>

            <td><%= f.password_field :password, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :"パスワード(確認用）" %></th>

            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", size: 25, class: "textlines-radius" %></td>
          </tr>

          <tr class="public-registrations-actions">


            <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>

    <br>
  </div>
</div>