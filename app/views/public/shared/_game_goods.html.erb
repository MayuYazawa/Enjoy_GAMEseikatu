<% if game.liked_by?(current_user) %>
  <%= link_to  game_not_goods_path(game), method: :delete do %>
    <i class="fas fa-heart"></i>
    <%= game.game_goods.count %>
  <% end %>
<% else %>
  <%= link_to game_goods_path(game), method: :post do %>
    <i class="far fa-heart"></i>
    <%= game.game_goods.count %>
  <% end %>
<% end %>