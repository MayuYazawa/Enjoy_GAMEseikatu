<div class= "container">
  <div class= "row-mt-5">
    <div class="order-text col-md-12 px-sm-0" style="margin-bottom:15px;">
      <h4><b>コメントいいね一覧</b></h4>
    </div>
  </div>
  <div class="col-md-12">
    <div class="row mb-3">
      <div class="col-md-12 px-sm-0">
        <table class="table table-bordered">
          <thead class="thead-light">
            <th class="col-md-3">ゲームコメントいいね</th>
            <th class="col-md-3">タイトル</th>
            <th class="col-md-2">コメント内容</th>
          </thead>
          <tbody>
            <%@user.game_comment_goods.each do |game_comment_good| %>
              <tr>
                <td></td>
                <td><%= game_comment_good.game_comment.title %></td>
                <td><%= game_comment_good.game_comment.body %></td>
                <td><%= link_to "表示する", game_comment_path(game_comment_good.game_comment),  class: "btn btn-sm btn-primary px-4" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-12">
    <div class="row mb-3">
      <div class="col-md-12 px-sm-0">
        <table class="table table-bordered">
          <thead class="thead-light">
            <th class="col-md-3">デバイスコメントいいね</th>
            <th class="col-md-3">タイトル</th>
            <th class="col-md-2">コメント内容</th>
          </thead>
          <tbody>
            <% @user.device_comment_goods.each do |device_comment_good| %>
              <tr>
                <td></td>
                <td><%= device_comment_good.device_comment.title %></td>
                <td><%= device_comment_good.device_comment.body %></td>
                <td><%= link_to "表示する", device_comment_path(device_comment_good.device_comment),  class: "btn btn-sm btn-primary px-4" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
