<% if device_comment.liked_by?(current_user) %>
  <%= link_to  device_comment_goods_path(device_comment), method: :delete do %>
    <i class="fas fa-heart"></i>
    <%= device_comment.device_comment_goods.count %>
  <% end %>
<% else %>
  <%= link_to device_comment_goods_path(device_comment), method: :post do %>
    <i class="far fa-heart"></i>
    <%= device_comment.device_comment_goods.count %>
  <% end %>
<% end %>