<div class="container">

  <div class="row"  style="margin-top:25px;">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h4>デバイス投稿編集</h4>
    </div>
  </div>
  <div class="row ml-5" style="margin-bottom:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model: @device, url: device_path(@device.id) do |f| %>
        <div class="table table-borderless text-secondary">
          <div class= "device_image">
            <%= f.label :device_image, "デバイス・周辺機器商品画像" %>
            <%= f.file_field :device_image, accept: "image/*" %>
          </div>
          <div class= "device_name">
            <%= f.label :device_name, "デバイス・周辺機器の名前" %>
            <%= f.text_field :device_name, :placeholder => "デバイス・周辺機器の名前", size: 47 %>
          </div>
          <div class= "device_genre">
            <%= f.label :device_genre_id, "デバイス・周辺機器ジャンル" %>
            <%= f.collection_select :device_genre_id, DeviceGenre.all, :id, :device_genre_name, {include_blank: "--選択してください--"} %>
          </div>
          <div class= "device_caption">
            <%= f.label :device_caption, "デバイス・周辺機器説明" %>
            <%= f.text_area :device_caption, :placeholder => "ここに説明文を記述します", size: "50x3" %>
          </div>
          <div class= "device_brand">
            <%= f.label :brand, "ブランド名" %>
            <%= f.text_area :brand, :placeholder => "ここにブランド名を記述します", size: "50x3" %>
          </div>
          <div class= "amazon">
            <%= f.label :amazon, "Amazonリンク" %>
            <%= f.text_area :amazon, :placeholder => "ここにAmazonのリンクを記述します", size: "50x3" %>
          </div>
          <div class= "device_price">
            <%= f.label :price, "税抜価格" %>
            <%= f.number_field :price, :placeholder => "1000" %>円
          </div>
        </div>
        <%= f.submit "変更を保存", class: 'btn btn-success btn-lg' %>
      <% end %>
    </div>
  </div>
</div>