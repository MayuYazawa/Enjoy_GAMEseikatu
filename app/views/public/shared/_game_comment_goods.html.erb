<% if game_comment.liked_by?(current_user) %>
  <%= link_to  game_comment_not_goods_path(game_comment), method: :delete do %>
    <i class="fas fa-heart"></i>
    <%= game_comment.game_comment_goods.count %>
  <% end %>
<% else %>
  <%= link_to game_comment_goods_path(game_comment), method: :post do %>
    <i class="far fa-heart"></i>
    <%= game_comment.game_comment_goods.count %>
  <% end %>
<% end %>