<div class="container my-2 py-4">
  <div class="row my-4">
    <h3 class="col-2 text-center"><b>マイページ</b></h3>
  </div>

  <div class="row mb-1">
    <h5 class="col-2">登録情報</h5>
    <%= link_to "編集する", edit_user_path(@user), class: "btn btn-sm btn-success px-4" %>
  </div>

  <div class="row">
    <div class="col-8">
      <div class="table table-bordered">
        <div class= "username">
          <div>ユーザーネーム<%= @user.username %></div>
        </div>
        <div class= "gender">
          <div>性別
            <% if @user.gender == "man" %>
              <div class="text-success font-weight-bold">男性</div>
            <% else %>
              <div class="text-muted font-weight-bold">女性</div>
            <% end %>
          </div>
        </div>
        <div class= "email">
          <div>メールアドレス<%= @user.email %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <h6 class="col-2">ゲームコメント一覧</h6>
      <%= link_to "一覧を見る", game_comments_path,  class: "btn btn-sm btn-primary px-4" %>
    <h6 class="col-3">デバイス・周辺機器コメント一覧</h6>
      <%= link_to "一覧を見る", device_comments_path, class: "btn btn-sm btn-primary px-4" %>
  </div>
  <div class="row mt-4">
    <h6 class="col-2">投稿いいね一覧</h6>
        <%= link_to "一覧を見る", goods_users_path,  class: "btn btn-sm btn-primary px-4" %>
  </div>
  <div class="row mt-4">
    <h6 class="col-2">コメントいいね一覧</h6>
        <%= link_to "一覧を見る", comment_goods_users_path,  class: "btn btn-sm btn-primary px-4" %>
  </div>
</div>