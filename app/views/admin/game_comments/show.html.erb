<div class= "container">
  <div class= "row">
    <div class= "col-9 md-9 my-5 offset-1">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th class="col-md-3">投稿</th>
          <th class="col-md-3">タイトル</th>
          <th class="col-md-2">コメント内容</th>
        </thead>
        <tbody>
          <%@game_comments.each do |game_comment| %>
            <% if game_comment.game.present? %>
              <tr>
              <td>
                <%= image_tag game_comment.game.game_image %>
              </td>
              <td><%= game_comment.title %></td>
              <td><%= simple_format(game_comment.body) %></td>
              <td><%= game_comment.rate %></td>
              <td><%= link_to "削除する", admin_game_comment_path(game_comment.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_game_comment_#{game_comment.id}" %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>