<div class='container px-5 px-sm-0'>
  <div class='row' style="margin-top:25px;">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h4 class="mb-3"><b><%= @user.username %>さんの会員詳細</b></h4>
      <table class='table text-secondary'>
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= @user.username %></td>
          </tr>
          <tr>
            <td>性別</td>
              <% if @user.gender == "man" %>
                <td class="text-success font-weight-bold">男性</td>
              <% else %>
                <td class="text-muted font-weight-bold">女性</td>
              <% end %>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <% if @user.is_deleted == false %>
              <td class="text-success font-weight-bold">有効</td>
            <% else %>
              <td class="text-muted font-weight-bold">退会</td>
            <% end %>
          </tr>
          <tr>
            <th></th>
            <th>
              <%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success' %>
              <%= link_to "ゲームコメント一覧を見る", admin_game_comment_path(@user.id), class: 'btn btn-info' %>
              <%= link_to "デバイス・周辺機器コメント一覧を見る", admin_device_comment_path(@user.id), class: 'btn btn-info' %>
            </th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>